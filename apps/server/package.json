{
	"name": "@prioritea/server",
	"version": "1.0.0",
	"description": "MERN CRUD",
	"main": "src/index.ts",
	"scripts": {
		"clean": "rimraf dist",
		"lint": "eslint --fix ./src/**/*.ts",
		"format": "prettier --write ./src/**/* --ignore-unknown",
		"build": "pnpm clean && tsc && vite build",
		"preview": "vite preview",
		"watch": "pnpm clean && tsc -w",
		"dev": "vite",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"db:seed": "prisma db seed",
		"db:migrate": "prisma migrate dev --schema=src/core/db/schema.prisma --name",
		"db:gen": "prisma generate --schema=src/core/db/schema.prisma",
		"db:studio": "prisma studio"
	},
	"prisma": {
		"seed": "ts-node src/core/db/seed.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@prioritea/config": "*",
		"@prioritea/tsconfig": "*",
		"@prioritea/types": "*",
		"@prioritea/utils": "*",
		"@prioritea/validation": "*",
		"@prisma/client": "^3.12.0",
		"argon2": "^0.28.5",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-async-errors": "^3.1.1",
		"helmet": "^5.0.2",
		"http-status-codes": "^2.2.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"node": "^17.7.2",
		"pg": "^8.7.3",
		"prisma": "^3.12.0",
		"tslib": "^2.3.1",
		"winston": "^3.7.2",
		"zod": "^3.14.4"
	},
	"devDependencies": {
		"@faker-js/faker": "^6.2.0",
		"@swc/core": "^1.2.179",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.25",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.20.0",
		"editorconfig": "^0.15.3",
		"eslint": "^8.15.0",
