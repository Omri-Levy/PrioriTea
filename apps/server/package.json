		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"nodemon": "^2.0.15",
		"prettier": "^2.6.2",
		"supertest": "^6.2.2",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3",
		"vite": "^2.9.8",
		"vite-plugin-node": "^0.0.19",
		"vitest": "^0.12.1"
