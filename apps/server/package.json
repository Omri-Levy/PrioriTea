{
	"name": "@prioritea/server",
	"version": "1.0.0",
	"description": "MERN CRUD",
	"main": "dist/index.js",
	"scripts": {
		"lint": "eslint --fix ./src/**/*.ts",
		"format": "prettier --write ./src/**/* --ignore-unknown",
		"build": "tsc",
		"watch": "tsc -w",
		"dev": "cross-env NODE_ENV=development nodemon dist/index.js",
		"test": "cross-env NODE_ENV=test jest --verbose",
		"test:ci": "yarn test --findRelatedTests",
		"test:watch": "yarn test --watch",
		"db:seed": "prisma db seed",
		"db:migrate": "prisma migrate dev --schema=src/core/db/schema.prisma --name",
		"db:gen": "prisma generate --schema=src/core/db/schema.prisma",
		"db:studio": "prisma studio"
	},
	"prisma": {
		"seed": "ts-node src/core/db/seed.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@prioritea/common": "*",
		"@prisma/client": "^3.12.0",
		"argon2": "^0.28.5",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-async-errors": "^3.1.1",
		"helmet": "^5.0.2",
		"http-status-codes": "^2.2.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"node": "^17.7.2",
		"pg": "^8.7.3",
		"prisma": "^3.12.0",
		"reflect-metadata": "^0.1.13",
		"tslib": "^2.3.1",
		"winston": "^3.7.2",
		"zod": "^3.14.4"
	},
	"devDependencies": {
		"@faker-js/faker": "^6.2.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.1",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.25",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.20.0",
		"editorconfig": "^0.15.3",
		"eslint": "^8.13.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^27.5.1",
		"nodemon": "^2.0.15",
		"prettier": "^2.6.2",
		"supertest": "^6.2.2",
		"ts-jest": "^27.1.4",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3"
	}
}
